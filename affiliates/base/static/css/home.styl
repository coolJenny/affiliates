// The home page

@import 'lib.styl';
@import 'steps.styl';

#intro {
    {section-dark}

    background: url(/static/img/bg-dots.png) center bottom no-repeat,
                url(/static/img/dark-grain.png),
                linear-gradient(to top, rgba(85, 90, 95, .25) 0, rgba(85, 90, 95, 0) 15px),
                linear-gradient(to bottom, darken($medium-gray, 20%) 0, $medium-gray 350px),
                $medium-gray;

    h1:before {
        display: block;
        background: transparent url('/static/img/affiliates-friends.png') 0 0 no-repeat;
        margin: 0 auto 30px;
        width: 173px;
        height: 79px;
        content: '';
    }

    .button {
        min-width: 200px;
    }

}

#dates {
    .section-title {
        color: #56565a;
        padding: 102px 0 70px;
        font-size: 2.3rem;
    }
    .join {
        margin: 50px 0 130px;
        padding: 0 30px;
        line-height: 1.7;
        text-align: center;
    }
}

//*----------------------------------------------------------------*/
// @Tablet layout: 760px

@media $media-query-tablet {

    #intro {
        background: url(/static/img/bg-crowd.png) center bottom no-repeat,
                    url(/static/img/bg-dots.png) center bottom no-repeat,
                    url(/static/img/dark-grain.png),
                    linear-gradient(to top, rgba(85, 90, 95, .25) 0, rgba(85, 90, 95, 0) 15px),
                    linear-gradient(to bottom, darken($medium-gray, 20%) 0, $medium-gray 350px),
                    $medium-gray;
        background-size: 940px 142px, auto, auto, auto, auto;
        padding-bottom: 80px;

        h1 {
            font-size: 48px;
        }

        .button {
            font-size: 24px;
        }
    }

}



//*----------------------------------------------------------------*/
// @Desktop layout: 1000px

@media $media-query-desktop {

    #intro {
        background-size: auto;
        padding-bottom: 110px;

        h1 {
            font-size: 60px;
        }
    }

}
